{
  "name": "eslint-config-lukemnet",
  "version": "1.0.1",
  "description": "Opinionated ESLint config with TypeScript and Prettier support for React and Node.js projects",
  "keywords": [
    "eslint",
    "airbnb",
    "typescript",
    "prettier"
  ],
  "homepage": "https://github.com/lukemnet/eslint-config-lukemnet#readme",
  "bugs": {
    "url": "https://github.com/lukemnet/eslint-config-lukemnet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lukemnet/eslint-config-lukemnet.git"
  },
  "license": "MIT",
  "author": "Łukasz Wójcik",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "eslint --ext .tsx,ts test/"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-unicorn": "^42.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "react": "^18.0.0",
    "sort-package-json": "^1.54.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "eslint": "^7.32.0 || ^8.2.0",
    "prettier": "^1.18.2 || ^2.0.0",
    "typescript": ">=3.3.1"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/lukemnet/eslint-config-lukemnet/blob/master/LICENSE"
    }
  ]
}
